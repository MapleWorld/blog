<div>
	<h2>Add a comment:</h2>
	<%= form_for ([@post, @post.comments.build]) do |f| %>
		<div>
			<% if session[:current_user_id] == nil %><br />
				<%= f.label :commenter %><br />
			<% else%>
				<%= f.label :commenter %><br />
			<% end %>
			<%= f.text_field :commenter %>
		</div>

		<div>
			<%= f.label :body %><br />
			<%= f.text_area :body %>
		</div>

		<p>
			<%= f.submit "Add a New Comment"%>
		</p>
	<% end %>
</div>
