<h2 align = "right""><%= link_to "Other Posts", posts_path%>
<%= link_to "Log Out", login_path("logout"), :method => :delete%></h2>

<h1><%= @user.username %></h1>
<hr />

<h1>My Blog</h1>
<% @user.posts.each do |post| %>
	<p>
		<b>Title</b>
		<%= link_to post.title, post %>
	</p>
 
	<p>
		<b>Content</b>
		<%= post.content %>
	</p>

	<p>
		<%= link_to "Edit", edit_post_path(post) %> 
		<%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete%>
	</p>
	<hr />

<% end %>

<p><%= link_to "Add a New Post", new_post_path %></p>
<hr />


